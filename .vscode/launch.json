  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run vlc monitor",
      "type": "node",
      "request": "launch",
      "args": ["./scripts/monitors/vlc.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "-r", "dotenv/config"],
      "sourceMaps": true,
      "outputCapture": "std",
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}
